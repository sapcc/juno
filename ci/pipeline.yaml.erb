# prettier-ignore
<%
  APPS = ["dashboard","widget-loader","whois","volta","heureka","maintenance"]
  LIBS = ["juno-ui-components", "communicator", "url-state-provider", "url-state-router"] 
%>

resources:
  - name: qa-de-1.release
    type: release
    check_every: never 
    source: { region: qa-de-1, tenso_password: ((keystone-user-password/tenso-prod)) }
    expose_build_created_by: true

  - name: eu-nl-1.release
    type: release
    check_every: never 
    source: { region: eu-nl-1, tenso_password: ((keystone-user-password/tenso-prod)) }
    expose_build_created_by: true

  - name: test-image-source.git
    type: git
    source:
      uri: https://github.com/sapcc/juno.git
      branch: main
      paths: ["ci/Dockerfile.test", "ci/helm-charts"]
      username: sapcc-bot
      password: ((github-access-token/sapcc-bot))

  - name: lib-juno-ui-components.git
    type: git
    source:
      uri: https://github.com/sapcc/juno.git
      branch: main
      paths: ["libs/juno-ui-components","package.json","ci/Dockerfile.ui-components","e2e", "ci/helm-charts"]
      username: sapcc-bot
      password: ((github-access-token/sapcc-bot))

  - name: static-assets.git
    type: git
    source:
      uri: https://github.com/sapcc/juno.git
      branch: main
      paths: ["assets"]
      username: sapcc-bot
      password: ((github-access-token/sapcc-bot))

  - name: api-mercury.git
    type: git
    source:
      uri: https://github.com/sapcc/juno.git
      branch: main
      paths: ["apis/mercury","package.json","ci/Dockerfile.mercury","e2e",".yarn", "ci/helm-charts"]
      username: sapcc-bot
      password: ((github-access-token/sapcc-bot))

  - name: error-pages.git
    type: git
    source:
      uri: https://github.com/sapcc/juno.git
      branch: main
      paths: ["config/error-pages","ci/Dockerfile.error-pages-default-backend"]
      username: sapcc-bot
      password: ((github-access-token/sapcc-bot))     
 
  <% APPS.each do |app| %>
  - name: app-<%= app %>.git
    type: git
    source:
      uri: https://github.com/sapcc/juno.git
      branch: main
      <% if app == "dashboard" %>
      paths: ["apps/<%= app %>","package.json","libs","ci/Dockerfile.dashboard","e2e", ".yarn","ci/pipeline.yaml", "ci/helm-charts"]
      <% else %>
      paths: ["apps/<%= app %>","package.json","libs","ci/Dockerfile.app","e2e", ".yarn","ci/pipeline.yaml", "ci/helm-charts"]
      <% end %>
      username: sapcc-bot
      password: ((github-access-token/sapcc-bot))

  - name: juno-<%= app %>.image
    type: docker-image
    check_every: 24h
    source:
      username: ((registry-user/keppel-ccloud.username))
      password: ((registry-user/keppel-ccloud.password))
      repository: keppel.eu-de-1.cloud.sap/ccloud/juno-<%= app %>
  <% end %>

  - name: repo.git
    type: git
    source:
      uri: https://github.com/sapcc/juno.git
      branch: main
      username: sapcc-bot
      password: ((github-access-token/sapcc-bot))

  - name: ci.git
    type: git
    source:
      uri: https://github.com/sapcc/juno.git
      branch: main
      paths: ["ci","package.json",".yarn"]
      username: sapcc-bot
      password: ((github-access-token/sapcc-bot))

  - name: secrets.git
    type: git-proxy
    webhook_token: lfkhslkfhs
    check_every: 6h
    source:
      uri: git@github.wdf.sap.corp:cc/secrets.git
      branch: "master"
      private_key: ((github-private-key/cc-secrets))

  - name: dashboard.version
    type: time-version-resource
    check_every: 525600h
    source: { key: juno-dashboard-version } # disambiguate from other time-version resources

  - name: mercury.version
    type: time-version-resource
    check_every: 525600h
    source: { key: juno-mercuri-version } # disambiguate from other time-version resources

  - name: juno-ui-components.version
    type: time-version-resource
    check_every: 525600h
    source: { key: juno-ui-components-version } # disambiguate from other time-version resources

  - name: cdn.version
    type: time-version-resource
    check_every: 525600h
    source: { key: juno-cdn-version } # disambiguate from other time-version resources

  - name: juno-mercury.image
    type: docker-image
    check_every: 24h
    source:
      username: ((registry-user/keppel-ccloud.username))
      password: ((registry-user/keppel-ccloud.password))
      repository: keppel.eu-de-1.cloud.sap/ccloud/juno-mercury

  - name: juno-ui-components.image
    type: docker-image
    check_every: 24h
    source:
      username: ((registry-user/keppel-ccloud.username))
      password: ((registry-user/keppel-ccloud.password))
      repository: keppel.eu-de-1.cloud.sap/ccloud/juno-ui-components

  - name: juno-cdn.image
    type: docker-image
    source:
      username: ((registry-user/keppel-ccloud.username))
      password: ((registry-user/keppel-ccloud.password))
      repository: keppel.eu-de-1.cloud.sap/ccloud/juno-cdn

  - name: juno-unit-test.image
    type: docker-image
    check_every: 24h
    source:
      username: ((registry-user/keppel-ccloud.username))
      password: ((registry-user/keppel-ccloud.password))
      repository: keppel.eu-de-1.cloud.sap/ccloud/juno-unit-test

  - name: error-pages-default-backend.image
    type: docker-image
    check_every: 24h
    source:
      username: ((registry-user/keppel-ccloud.username))
      password: ((registry-user/keppel-ccloud.password))
      repository: keppel.eu-de-1.cloud.sap/ccloud/juno-error-pages/default-backend

  - name: juno-ui-components-release
    type: github-release
    source:
      github_api_url: https://api.github.com/v3
      github_uploads_url: https://uploads.github.com/
      user: sapcc
      repository: juno
      access_token: ((github-access-token/juno))


resource_types:
