  - name: app-dashboard.git
    type: git
    source:
      uri: https://github.com/sapcc/juno.git
      branch: main
      paths: ["apps/dashboard","ci"]
      username: sapcc-bot
      password: {{real-github-access-token}}
 
  <% APPS.each do |app| %>
  - name: app-<%= app %>.git
    type: git
    source:
      uri: https://github.com/sapcc/juno.git
      branch: main
      paths: ["apps/<%= app %>","ci"]
      username: sapcc-bot
