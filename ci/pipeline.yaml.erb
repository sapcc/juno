          VAULT_ROLE_ID:      ((auth.role_id))
          VAULT_SECRET_ID:    ((auth.secret_id))  

  # RUN CYPRESS TESTS FOR STORYBOOK IN QA 
  - name: e2e-tests-storybook-s-eu-nl-1
