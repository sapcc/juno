        params:
          HELM_MAJOR_VERSION: '3'
          CHART_PATH: ci/helm-charts/ui_storybook
          RELEASE: juno-v3-storybook
          NAMESPACE: juno
          REGION: eu-nl-1
          CONTEXT: s-eu-nl-1
