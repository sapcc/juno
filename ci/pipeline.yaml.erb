groups:
  - name: juno-apps
    jobs:
      - readme
      - build-widget-loader
      - unit-test-whois
      - unit-test-maintenance
      - e2e-production
      - build-dashboard
      - combine-apps
      - build-volta
      - unit-test-heureka
      - deploy-to-s-qa-de-1
      - unit-test-juno-ui-components
      - unit-test-mercury
      - build-whois
      - unit-test-volta
      - build-heureka
