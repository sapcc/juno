{
  "name": "communicator",
  "version": "2.2.2",
  "description": "Send and receive across tabs",
  "source": "src/index.js",
  "main": "build/index.js",
  "module": "build/index.js",
  "scripts": {
    "dev": "NODE_ENV=development node ./esbuild.config.js --watch",
    "build": "NODE_ENV=production node ./esbuild.config.js",
    "test": "jest"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.20.2",
    "babel-jest": "^29.4.2",
    "esbuild": "^0.17.6",
    "jest": "^29.4.2"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "jest": {
    "testEnvironment": "jsdom",
    "verbose": true,
    "transform": {
      "\\.js$": "babel-jest"
    },
    "watchPathIgnorePatterns": [
      "<rootDir>/dev/",
      "<rootDir>/build/"
    ]
  }
}
