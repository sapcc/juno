{
  "name": "widget-loader",
  "version": "1.1.1",
  "description": "This app presets the juno environment on the host and loads other apps",
  "source": "src/index.js",
  "main": "build/app.js",
  "module": "build/app.js",
  "scripts": {
    "build": "NODE_ENV=production rollup -c",
    "start": "serve -l tcp://0.0.0.0:${WIDGET-LOADER_PORT:-APP_PORT} -s src",
    "test": "jest"
  },
  "devDependencies": {
    "@babel/core": "^7.20.5",
    "@babel/preset-env": "^7.20.2",
    "babel-jest": "^29.3.1",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "rollup": "^3.4.0",
    "rollup-plugin-analyzer": "^4.0.0",
    "rollup-plugin-babel-minify": "^10.0.0",
    "rollup-plugin-delete": "^2.0.0"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "jest": {
    "verbose": true,
    "testEnvironment": "jsdom",
    "transform": {
      "\\.[jt]sx?$": "babel-jest"
    }
  }
}
