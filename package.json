{
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "lib/juno-ui-components"
    ],
    "nohoist": [
      "**/webpack-dev-server",
      "**/jest",
      "**/react-scripts",
      "**/react-scripts/**"
    ]
  },
  "scripts": {
    "clear": "scripts/rm_node_modules.sh",
    "bootstrap": "yarn clear; yarn install && yarn workspace juno-ui-components build",
    "reinstall": "scripts/rm_node_modules.sh && yarn install",
    "dashboard": "yarn workspace dashboard start"
  }
}
